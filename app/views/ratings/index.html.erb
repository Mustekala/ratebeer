<h1>Ratings</h1>

<table class="table table-hover">
  <thead>
    Newest ratings
  </thead>

  <tbody>
    <ul>
        <% @ratings.recent.each do |rating| %>
            <li> <%= rating %> <%=link_to rating.user.username, rating.user %> </li>
        <% end %>
    </ul>
  </tbody>
</table>

